		<script>
			function adjustContainerPosition() {
				var container = document.querySelector('.container');
				var windowWidth = window.innerWidth;
				if (windowWidth < 600) {
					var leftValue = windowWidth - 600;
					leftValue = leftValue / 2;
					container.style.left = leftValue + 'px';
				}
			}

			window.addEventListener('resize', adjustContainerPosition);

			window.addEventListener('DOMContentLoaded', adjustContainerPosition);
			// adjustContainerPosition();
		</script>
