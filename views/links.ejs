		<style>
			body {
				background: url('/img/Flame-Thisisfine.gif') no-repeat center center fixed;
				-webkit-background-size: cover;
				-moz-background-size: cover;
				-o-background-size: cover;
				background-size: cover;
			}
			.container {
				backdrop-filter: blur(10px);
				background-color: #0f0f0fbe;
				color: #f1f1f1;
				width: 100%;
				max-width: 750px;
				min-width: 600px;
				min-height: 90vh;
				border-radius: 100px;
			}

			@media (max-width: 800px) {
				.container {
					transform: scale(0.9);
				}
			}

			@media (max-width: 700px) {
				.container {
					transform: scale(0.8);
				}
				.body-content {
					padding-left: 2rem !important;
					padding-right: 2rem !important;
				}
			}

			@media (max-width: 600px) {
				.container {
					position: relative;
				}
			}

			@media (max-width: 500px) {
				.container {
					transform: scale(0.6);
				}
			}

			@media (max-width: 400px) {
				.container {
					transform: scale(0.5);
				}
			}

			.body-content {
				padding: 5rem;
			}
			td {
				padding: 10px 0px;
			}
			.button-div {
				display: flex;
				justify-content: center;
				align-items: center;
				flex-direction: row;
				height: 100%;
				width: 100%;
			}

			.button-div img {
				height: 50px;
				width: 50px;
			}

			.button-div span {
				font-size: 25px;
				display: flex;
				align-items: center;
				justify-content: center;
				margin-left: 10px;
			}

			button {
				height: 75px;
				border-radius: 40px;
				padding: 0px 40px;
				background-color: #fd9e33;
				font-weight: bold;
			}
		</style>
	</head>
